<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FiltreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Filtres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filtres"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bt_X"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:text="X" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_Via"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/via"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/cb_Oral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/oral" />

                <CheckBox
                    android:id="@+id/cb_Topica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/topical" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CheckBox" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CheckBox" />

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CheckBox" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_Format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/format"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/cb_Comprimidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/comprimidos" />

                <CheckBox
                    android:id="@+id/cb_Pomada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pomada" />

                <CheckBox
                    android:id="@+id/cb_Crema"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/crema" />

                <CheckBox
                    android:id="@+id/cb_Jarabe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/jarabe" />

                <CheckBox
                    android:id="@+id/cb_Inyeccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/inyeccion" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pvp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pvp"
                android:textSize="20sp" />

            <SeekBar
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/selectedValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nom_medicament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Nom_Medicament"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/medNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Inserir nom medicament" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nom_medicament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prescripcio"
                android:textSize="20sp" />


        </LinearLayout>

        <Button
            android:id="@+id/bt_Aplicar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/apply" />

    </LinearLayout>

</FrameLayout>